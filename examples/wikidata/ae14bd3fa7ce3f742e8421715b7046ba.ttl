    sh:SPARQLSelectExecutable;
  dcterms:isPartOf <https://www.wikidata.org//wiki/Wikidata:SPARQL_query_service/Federated_queries>,
    <https://www.wikidata.org//wiki/User:Battleofalma/Federated_queries>;
